@page
@model FisketorvetWebAppProject.AllEvents.EventCreationModel
@{ }
<h4 style="color:#2e2b2b ; margin-top:20px; margin-left:15px">Create new event</h4>
<form class="form-horizontal" ; method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group" style="width:25%">
        <label asp-for="@Model.Events.Id" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Events.Id" type="text" class="form-control" />
            <span asp-validation-for="@Model.Events.Id" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" style="width:25%">
        <label asp-for="@Model.Events.Title" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Events.Title" type="text" class="form-control" />
            <span asp-validation-for="@Model.Events.Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" style="width:25%">
        <label asp-for="@Model.Events.Image" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Events.Image" type="text" class="form-control" />
            <span asp-validation-for="@Model.Events.Image" class="text-danger"></span>
        </div>
    </div>
    <div class="form" style="width:50%">
        <label asp-for="@Model.Events.Description" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Events.Description" type="text" class="form-control" style="height: 150px" />
            <span asp-validation-for="@Model.Events.Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="border-light">Add event</button>
        </div>
    </div>
</form>

