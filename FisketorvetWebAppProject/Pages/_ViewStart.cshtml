@using Microsoft.AspNetCore.Http
@{
    var routeUrl = ViewContext.RouteData.Values["Page"].ToString();
    //you can put pages' name into pages
    var pages = new List<string> { "Indexxxx" };
    //if routeUrl contains any of pages,the page will use _Layout as Layout page,the other pages will use _Layout1 ad Layout page
    if (pages.Any(routeUrl.Contains)&&(Context.Session.GetString("admin") == null)&& (Context.Session.GetString("normal") == null))
    {
        Layout = "_Layout";
    }
    else if (Context.Session.GetString("admin") != null)
    {
        Layout = "Shared/LoggedLayout.cshtml";
    }
    else if (Context.Session.GetString("normal") != null)
    {
        Layout = "Shared/LoggedLayout.cshtml";
    }
    else
    {
        Layout = "Shared/LoginLayout.cshtml";
    }

}