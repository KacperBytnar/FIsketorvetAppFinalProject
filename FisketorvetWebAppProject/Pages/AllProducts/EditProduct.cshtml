@page "{Id}"
@model FisketorvetWebAppProject.Pages.AllProducts.EditProductModel
@{
}

<form class="form-horizontal" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input hidden="hidden" asp-for="@Model.Product.ID" type="number" class="form-control" />
    <div class="form-group" style="width:50%">
        <label asp-for="@Model.Product.Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Product.Name" type="text" class="form-control" />
            <span asp-validation-for="@Model.Product.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" style="width:25%">
        <label asp-for="@Model.Product.Shop" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Product.Shop" type="text" class="form-control" />
            <span asp-validation-for="@Model.Product.Shop" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" style="width:25%">
        <label asp-for="@Model.Product.Price" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Product.Price" type="number" class="form-control" />
            <span asp-validation-for="@Model.Product.Price" class="text-danger"></span>
        </div>
    </div>
    <div class="form" style="width:25%">
        <label asp-for="@Model.Product.Image" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Product.Image" type="text" class="form-control" />
            <span asp-validation-for="@Model.Product.Image" class="text-danger"></span>
        </div>
    </div>
    <div class="form" style="width:25%">
        <label asp-for="@Model.Product.InStock" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Product.InStock" type="checkbox" class="form-control" style="height: 50px" />
            <span asp-validation-for="@Model.Product.InStock" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Edit" class="btn btn-primary" />
        </div>
    </div>
</form>